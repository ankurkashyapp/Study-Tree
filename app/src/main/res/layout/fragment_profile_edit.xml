<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_material_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <ImageView
                    android:id="@+id/user_image_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/splash_back"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black_transparent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_image_front"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="1dp"/>

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ankur Kashyap"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

                    <TextView
                        android:id="@+id/user_reg_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11210799"
                        android:textColor="@color/white_transparent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"/>

                </LinearLayout>

                <Button
                    android:id="@+id/edit_user_image"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/white_round_corner"
                    android:textColor="@color/white"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:text="Change Picture"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/grey_material_light">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Name: "
                            android:textColor="@color/white"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                        <EditText
                            android:id="@+id/edit_user_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:drawableLeft="@drawable/ic_profile"
                            android:layout_marginLeft="10dp"
                            android:background="@color/black_transparent_light"
                            android:paddingLeft="15dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:drawablePadding="5dp"
                            android:drawableTint="@color/white_transparent"
                            android:hint="Your Name"
                            android:textColor="@color/grey"
                            android:textColorHint="@color/white_transparent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:inputType="textPersonName"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Age: "
                            android:textColor="@color/white"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                        <EditText
                            android:id="@+id/edit_user_age"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:drawableLeft="@drawable/ic_age"
                            android:layout_marginLeft="10dp"
                            android:background="@color/black_transparent_light"
                            android:paddingLeft="15dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:drawablePadding="5dp"
                            android:inputType="numberDecimal"
                            android:textColor="@color/grey"
                            android:drawableTint="@color/white_transparent"
                            android:hint="Your Age"
                            android:textColorHint="@color/white_transparent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Email Id: "
                            android:textColor="@color/white"

                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                        <EditText
                            android:id="@+id/edit_user_email"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:drawableLeft="@drawable/ic_email"
                            android:layout_marginLeft="10dp"
                            android:background="@color/black_transparent_light"
                            android:paddingLeft="15dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:drawablePadding="5dp"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/grey"
                            android:drawableTint="@color/white_transparent"
                            android:hint="Your email"
                            android:textColorHint="@color/white_transparent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Contact: "
                            android:textColor="@color/white"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                        <EditText
                            android:id="@+id/edit_user_contact"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:drawableLeft="@drawable/ic_contact"
                            android:layout_marginLeft="10dp"
                            android:background="@color/black_transparent_light"
                            android:paddingLeft="15dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:drawablePadding="5dp"
                            android:inputType="numberDecimal"
                            android:textColor="@color/grey"
                            android:drawableTint="@color/white_transparent"
                            android:hint="Your contact number"
                            android:textColorHint="@color/white_transparent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pwd: "
                            android:textColor="@color/white"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                        <EditText
                            android:id="@+id/edit_user_password"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:drawableLeft="@drawable/ic_password"
                            android:layout_marginLeft="10dp"
                            android:background="@color/black_transparent_light"
                            android:paddingLeft="15dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:drawablePadding="5dp"
                            android:inputType="textPassword"
                            android:textColor="@color/grey"
                            android:drawableTint="@color/white_transparent"
                            android:hint="Password"
                            android:textColorHint="@color/white_transparent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Confirm: "
                            android:textColor="@color/white"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                        <EditText
                            android:id="@+id/edit_user_password_confirm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:drawableLeft="@drawable/ic_password"
                            android:layout_marginLeft="10dp"
                            android:background="@color/black_transparent_light"
                            android:paddingLeft="15dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:drawablePadding="5dp"
                            android:inputType="textPassword"
                            android:textColor="@color/grey"
                            android:drawableTint="@color/white_transparent"
                            android:hint="Confirm Password"
                            android:textColorHint="@color/white_transparent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/submit_update_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Update Profile"
                        android:textColor="@color/white"
                        android:background="@drawable/selector_blue_normal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableRight="@drawable/ic_right_arrow"
                        android:paddingRight="30dp"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>


</LinearLayout>