<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_normal</item>
        <item name="colorPrimaryDark">@color/blue_normal</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarGreyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/grey_material_dark</item>
        <item name="colorPrimaryDark">@color/grey_material_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarOverlay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_normal</item>
        <item name="colorPrimaryDark">@color/blue_normal</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

</resources>
